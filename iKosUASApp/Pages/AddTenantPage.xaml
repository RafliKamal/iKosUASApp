<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iKosUASApp.Pages.AddTenantPage"
             BackgroundColor="#191919"
             NavigationPage.HasNavigationBar="False">
    
    <StackLayout Padding="20">
        <Label Text="Nama Penyewa" />
        <Entry x:Name="nameEntry" Placeholder="Masukkan nama penyewa" />

        <Label Text="Pilih Kamar Tersedia" />
        <Picker x:Name="roomPicker" Title="Pilih kamar" />

        <Button Text="Simpan" Clicked="OnSaveClicked" BackgroundColor="#4B5C6B" TextColor="White" Margin="0,30,0,0"/>
    </StackLayout>
</ContentPage>