<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:iKosUASApp.Pages"
       x:Class="iKosUASApp.Pages.MainNavigationPage"
       Shell.TabBarBackgroundColor="#191919"
       Shell.TabBarTitleColor="White"
       Shell.TabBarUnselectedColor="Gray"
       Shell.TabBarForegroundColor="White">

    <TabBar>
        <ShellContent Title="_"
                      Icon="dashboardd.png"
                      ContentTemplate="{DataTemplate pages:HomePage}" />

        <ShellContent Title="_"
                      Icon="booking.png"
                      ContentTemplate="{DataTemplate pages:RoomPage}" />

        <ShellContent Title="_"
                      Icon="group.png"
                      ContentTemplate="{DataTemplate pages:TenantPage}" />

        <ShellContent Title="_"
                      Icon="dollar.png"
                      ContentTemplate="{DataTemplate pages:PaymentPage}" />
    </TabBar>
</Shell>
