<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iKosUASApp.Pages.EditProfilePage"
             Title="Edit Profil"
             BackgroundColor="#191919"
             NavigationPage.HasNavigationBar="False"

             Shell.NavBarIsVisible="False">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Grid ColumnDefinitions="Auto,*"
                  Margin="0,0,0,10"
                  VerticalOptions="Center">
                <ImageButton Source="back.png"
                             BackgroundColor="Transparent"
                             Clicked="OnBackClicked"
                             HeightRequest="30"
                             WidthRequest="30"
                             HorizontalOptions="Start"/>
                <Label Text="Edit Profile"
                       FontSize="20"
                       VerticalTextAlignment="Center"
                       TextColor="White"
                       HorizontalOptions="Start"
                       Margin="20,0,0,0"
                       Grid.Column="1"/>
            </Grid>

            <!-- Foto Profil -->
            <Image x:Name="profileImage"
                   HeightRequest="150"
                   WidthRequest="150"
                   Aspect="AspectFill"
                   BackgroundColor="LightGray"
                   HorizontalOptions="Center" />

            <!-- Tombol Pilih Gambar -->
            <Button Text="Pilih Foto Profil"
                    Clicked="OnPickImageClicked"
                    BackgroundColor="#4B5C6B"
                    TextColor="White"
                    HorizontalOptions="Center" />

            <!-- Input Nama Kosan -->
            <Label Text="Nama Kosan"
                   TextColor="White"/>
            <Entry x:Name="kosNameEntry"
                   Placeholder="Contoh: Kos Mawar"
                   BackgroundColor="#2E2E2E"
                   TextColor="White"
                   PlaceholderColor="Gray"
                   HeightRequest="40" />

            <!-- Tombol Simpan -->
            <Button Text="Simpan Perubahan"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#4B5C6B"
                    TextColor="White"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
