<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iKosUASApp.Pages.PaymentPage"
             Title="Pembayaran">
    <StackLayout Padding="20">
        <Label Text="Daftar Penyewa" FontAttributes="Bold" FontSize="20" Margin="0,0,0,10"/>
        <CollectionView x:Name="paymentList"
                        SelectionMode="Single"
                        SelectionChanged="OnTenantSelected">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="LightGray">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="18" />
                            <Label Text="Klik untuk melihat detail pembayaran" FontSize="12" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
