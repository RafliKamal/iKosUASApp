<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iKosUASApp.Pages.RoomPage"
             Title="RoomPage">
    <ScrollView>
        <StackLayout Padding="20">
            <Button Text="Tambah Kamar" Clicked="OnAddRoomClicked" />

            <Label Text="Kamar Tersedia" FontSize="18" FontAttributes="Bold" Margin="0,10,0,5"/>
            <CollectionView x:Name="availableRoomsView" SelectionMode="Single" SelectionChanged="OnRoomTapped">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BackgroundColor="#959696">
                            <StackLayout>
                                <Label Text="{Binding RoomNumber}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Description}" FontSize="14" />
                                <Image Source="{Binding ImagePath}" HeightRequest="100" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Kamar Terisi" FontSize="18" FontAttributes="Bold" Margin="0,20,0,5"/>
            <CollectionView x:Name="occupiedRoomsView" SelectionMode="Single" SelectionChanged="OnRoomTapped">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BackgroundColor="#959696">
                            <StackLayout>
                                <Label Text="{Binding RoomNumber}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Description}" FontSize="14" />
                                <Image Source="{Binding ImagePath}" HeightRequest="100" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>

</ContentPage>