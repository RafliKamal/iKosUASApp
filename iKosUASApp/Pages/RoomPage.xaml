<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iKosUASApp.Pages.RoomPage"
             BackgroundColor="Black"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Button Text="Tambah Kamar"
                    BackgroundColor="#2D3D4F"
                    TextColor="White"
                    FontAttributes="Bold"
                    Clicked="OnAddRoomClicked" />

            <!-- Label kamar tersedia -->
            <Label Text="Kamar Tersedia"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   Margin="0,10,0,5"/>

            <CollectionView x:Name="availableRoomsView"
                            SelectionMode="Single"
                            SelectionChanged="OnRoomTapped">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#4B5C6B"
                               CornerRadius="5"
                               Margin="0,5"
                               Padding="10"
                               HasShadow="False"
                               InputTransparent="True">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackLayout Spacing="5">
                                    <Label Text="{Binding RoomNumber}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           TextColor="White"/>
                                </StackLayout>

                                <Image Grid.Column="1"
                                       Source="{Binding ImagePath}"
                                       HeightRequest="80"
                                       WidthRequest="100"
                                       Aspect="AspectFill"
                                       Margin="10,0,0,0"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Label kamar terisi -->
            <Label Text="Kamar Terisi"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   Margin="0,20,0,5"/>

            <CollectionView x:Name="occupiedRoomsView"
                            SelectionMode="Single"
                            SelectionChanged="OnRoomTapped">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#4B5C6B"
                               CornerRadius="5"
                               Margin="0,5"
                               Padding="10"
                               HasShadow="False"
                               InputTransparent="True">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackLayout Spacing="5">
                                    <Label Text="{Binding RoomNumber}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           TextColor="White"/>
                                </StackLayout>

                                <Image Grid.Column="1"
                                       Source="{Binding ImagePath}"
                                       HeightRequest="80"
                                       WidthRequest="100"
                                       Aspect="AspectFill"
                                       Margin="10,0,0,0"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ScrollView>
</ContentPage>
