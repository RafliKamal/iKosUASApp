<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iKosUASApp.Pages.TenantPage"
             Title="TenantPage">
    <StackLayout Padding="20">
        <Button Text="Tambah Penyewa" Clicked="OnAddTenantClicked" />
        <CollectionView x:Name="tenantView" SelectionChanged="OnTenantSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10">
                        <StackLayout>
                            <Label Text="{Binding Tenant.Name}" FontSize="20" />
                            <Label Text="{Binding Room.RoomNumber, StringFormat='Kamar: {0}'}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>
