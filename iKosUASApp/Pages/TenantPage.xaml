<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iKosUASApp.Pages.TenantPage"
             BackgroundColor="#191919"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Button
                BackgroundColor="#2D3D4F"
                TextColor="White"
                FontAttributes="Bold"
                Text="Tambah Penyewa"
                Clicked="OnAddTenantClicked" />

            <Label x:Name="emptyLabel"
                   Text="Belum ada data penyewa."
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   IsVisible="False"
                   Margin="0,40,0,0"/>


            <CollectionView x:Name="tenantView"
                            SelectionMode="Single"
                            SelectionChanged="OnTenantSelected"
                            Margin="0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#4B5C6B"
                               CornerRadius="5"
                               Margin="0,5,0,5"
                               Padding="10"
                               HasShadow="False"
                               InputTransparent="True">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackLayout Spacing="5">
                                    <Label Text="{Binding Tenant.Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Text="{Binding Room.RoomNumber, StringFormat='Kamar: {0}'}"
                                           FontSize="14"
                                           TextColor="White"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ScrollView>
</ContentPage>
