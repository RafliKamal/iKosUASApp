<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iKosUASApp.Pages.TenantPaymentDetailPage"
             Title="Detail Pembayaran">
    <StackLayout Padding="20" Spacing="15">
        <Label x:Name="tenantNameLabel" FontSize="24" FontAttributes="Bold" />
        <Button Text="Tambah Pembayaran" Clicked="OnAddPaymentClicked" />
        <CollectionView x:Name="paymentListView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="LightGray">
                        <StackLayout>
                            <Label Text="{Binding Date, StringFormat='Tanggal: {0:MMMM yyyy}'}" />
                            <Label Text="{Binding Amount, StringFormat='Jumlah: Rp {0:N0}'}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
